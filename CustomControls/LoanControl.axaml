<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="BankAccount.LoanControl"
			 xmlns:uc="using:BankAccount"
			 x:DataType="uc:Loan"
			 >

	<Border CornerRadius="30" Width="300" Height="150" Background="LimeGreen" BorderBrush="Black" BorderThickness="7">
		<Grid RowDefinitions="*,*" ColumnDefinitions="*">
			<TextBlock Margin="10,0,0,0" FontSize="20" Grid.Column="0" Grid.Row="0">
				<TextBlock.Text>
					<MultiBinding StringFormat="{}{0}: {1:C}">
						<Binding Path="PaymentType"/>
						<Binding Path="CostForEachPayment"/>
					</MultiBinding>
				</TextBlock.Text>
			</TextBlock>
			<TextBlock Margin="10,0,0,0" Text="{Binding Debt, StringFormat='{}Total Debt: {0:C}'}" FontSize="20" Grid.Column="0" Grid.Row="1"/>
		</Grid>
	</Border>
</UserControl>
